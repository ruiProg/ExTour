<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">


    <ImageButton
        android:id="@+id/map_menu"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:visibility="visible"
        android:background="@drawable/ic_map_black_24dp"
        android:layout_alignTop="@+id/search_menu"
        android:layout_toStartOf="@+id/go" />

    <ImageButton
        android:id="@+id/search_menu"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/concelho"
        android:layout_marginStart="18dp"
        android:layout_marginTop="12dp"
        android:adjustViewBounds="false"
        android:background="@drawable/ic_search_black_24dp"
        android:cropToPadding="false"
        android:visibility="visible" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"

        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_marginTop="150dp"
        tools:context="com.extour.ex_tour.SearchMaps" />

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/searchView"
        android:iconifiedByDefault="true"
        android:queryHint="Search"
        android:layout_marginTop="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimaryDark"/>

    <Button
        android:id="@+id/go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/searchView"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/searchView"
        android:background="@color/colorPrimaryDark"
        android:onClick="navigate"
        android:text="Go" />

    <ImageButton
        android:id="@+id/bag_menu"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:visibility="visible"
        android:background="@drawable/ic_folder_special_black_24dp"
        android:layout_below="@+id/map"
        android:layout_alignStart="@+id/go"
        android:layout_marginTop="18dp" />

    <Button
        android:id="@+id/category"
        android:layout_width="200dp"
        android:layout_height="32dp"
        android:text="Categoria"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="118dp"
        android:background="@color/colorPrimary"/>
    <Button
        android:id="@+id/concelho"
        android:layout_width="200dp"
        android:layout_height="32dp"
        android:text="Concelho"
        android:layout_marginLeft="0dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/category"
        android:layout_toStartOf="@+id/category" />

</RelativeLayout>